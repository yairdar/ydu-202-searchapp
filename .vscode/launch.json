{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "info"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "__pypackages__/3.8/lib"
            }
        },
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "__pypackages__/3.8/lib"
            }
        },
    ]
}